    <script type = 'text/javascript'>
    displayComments();

    function displayComments(){
        $('ul').empty();
        $.ajax({
            url:'/comments',
            method:'GET'
        }).then(function(res){
            for (var i =0; i<res.length; i++){
                var li = $('<li>');
                    li.text(res[i]['comment'])
                    $('ul').append(li);
            }
        })
    }
